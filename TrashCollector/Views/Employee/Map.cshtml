
@model TrashCollector.Models.Customer

@{
    ViewBag.Title = "Map";
}

<h2>How do I get there?</h2>


<div>
    <h4>Customer's Location</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>First Name</dt>

        <dd>
            @Html.DisplayFor(model => model.FirstName)
        </dd>

        <dt>Last Name</dt>

        <dd>
            @Html.DisplayFor(model => model.LastName)
        </dd>

        <dt>Street Address</dt>

        <dd>
            @Html.DisplayFor(model => model.Street)
        </dd>

        <dt>City</dt>

        <dd>
            @Html.DisplayFor(model => model.City)
        </dd>

        <dt>State</dt>

        <dd>
            @Html.DisplayFor(model => model.State)
        </dd>

        <dt>ZipCode</dt>

        <dd>
            @Html.DisplayFor(model => model.ZipCode)
        </dd>

    </dl>
</div>



<input id="userAddress" hidden value="@Model.Street@Model.City@Model.State@Model.ZipCode" />

<style>
    #map {
        height: 400px;
        width: 100%;
    }
</style>

<br />
<div class="row"></div>
<div id="map"></div>

<script>
    var map;
    function initMap() {
        map = new google.maps.Map(document.getElementById('map'), {
            center: { lat: 42.9764, lng: -88.1084 },
            zoom: 14
        });
        var marker = new google.maps.Marker({
            position: { lat: 42.9764, lng: -88.1084 },
            map: map,
        });
    }
</script>


    <script async defer
        src="https://maps.googleapis.com/maps/api/js?key=AIzaSyD7ko1fc1sthsrle4esozHsVUx8ZRPtkfk&callback=initMap">
</script>


